<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="activity_update_apk"
            />
        <TextView
            android:id="@+id/nowVersionTV"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="当前版本 1.0.0"
            android:textSize="16dp"
            android:textColor="#747474"
            />
        <TextView
            android:id="@+id/newVersionTV"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="最新版本 1.0.0"
            android:textSize="16dp"
            android:textColor="#747474"
            />
        <Button
            android:id="@+id/updateVersionBtn"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="#328ee3"
            android:text="升 级"
            android:textColor="#FFFFFF"
            android:textSize="14dp"
            android:onClick="updateVersionClick"
            />
    </LinearLayout>
</LinearLayout>